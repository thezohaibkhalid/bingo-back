generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum MatchStatus {
  INVITED
  BOARD_SETUP
  IN_PROGRESS
  FINISHED
  CANCELLED
}

// ── AUTH MODELS (email + password + 2FA) ───────────────────────────────

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    // hashed password (bcrypt)
  name          String?
  displayName   String?
  image         String?
  avatarUrl     String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastOnlineAt  DateTime?

  // Auth relations
  sessions  Session[]
  otpCodes  EmailOtp[]

  // App relations
  requestedFriendships Friendship[] @relation("FriendshipRequester")
  receivedFriendships  Friendship[] @relation("FriendshipAddressee")
  matchesAsPlayer1     Match[]      @relation("Player1Matches")
  matchesAsPlayer2     Match[]      @relation("Player2Matches")
  matchesAsCurrentTurn Match[]      @relation("CurrentTurnMatches")
  matchesWon           Match[]      @relation("WonMatches")
  boards               Board[]
  moves                Move[]       @relation("UserMoves")

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model EmailOtp {
  id         String   @id @default(cuid())
  userId     String
  codeHash   String   // sha256 of the OTP code
  purpose    String   // e.g. "login_2fa"
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose])
  @@index([expiresAt])
  @@map("email_otps")
}

// ── APP MODELS ─────────────────────────────────────────────────────────

model Friendship {
  id          String           @id @default(cuid())
  requesterId String
  addresseeId String
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())

  requester User @relation("FriendshipRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  addressee User @relation("FriendshipAddressee", fields: [addresseeId], references: [id], onDelete: Cascade)

  @@unique([requesterId, addresseeId])
  @@index([addresseeId, status])
  @@index([requesterId, status])
  @@map("friendships")
}

model Match {
  id                String      @id @default(cuid())
  player1Id         String
  player2Id         String
  status            MatchStatus @default(INVITED)
  currentTurnUserId String?
  winnerUserId      String?
  createdAt         DateTime    @default(now())
  startedAt         DateTime?
  endedAt           DateTime?

  player1         User  @relation("Player1Matches", fields: [player1Id], references: [id], onDelete: Restrict)
  player2         User  @relation("Player2Matches", fields: [player2Id], references: [id], onDelete: Restrict)
  currentTurnUser User? @relation("CurrentTurnMatches", fields: [currentTurnUserId], references: [id], onDelete: SetNull)
  winnerUser      User? @relation("WonMatches", fields: [winnerUserId], references: [id], onDelete: SetNull)

  boards Board[]
  moves  Move[]

  @@index([player1Id])
  @@index([player2Id])
  @@index([status])
  @@map("matches")
}

model Board {
  id        String   @id @default(cuid())
  matchId   String
  userId    String
  numbers   Int[]
  createdAt DateTime @default(now())

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Restrict)

  @@unique([matchId, userId])
  @@index([userId])
  @@map("boards")
}

model Move {
  id             String   @id @default(cuid())
  matchId        String
  moveNumber     Int
  chosenByUserId String
  number         Int
  createdAt      DateTime @default(now())

  match    Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  chosenBy User  @relation("UserMoves", fields: [chosenByUserId], references: [id], onDelete: Restrict)

  @@unique([matchId, moveNumber])
  @@unique([matchId, number])
  @@index([matchId])
  @@index([chosenByUserId])
  @@map("moves")
}
