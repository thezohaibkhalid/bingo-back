datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"
}

// ─────────────────────────────────────────────
// ENUMS
// ─────────────────────────────────────────────

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum MatchStatus {
  INVITED
  BOARD_SETUP
  IN_PROGRESS
  FINISHED
  CANCELLED
}

// ─────────────────────────────────────────────
// MODELS
// ─────────────────────────────────────────────

model User {
  id           String    @id @default(uuid()) @db.Uuid
  googleId     String    @unique
  email        String    @unique
  displayName  String
  avatarUrl    String?
  createdAt    DateTime  @default(now())
  lastOnlineAt DateTime?

  // Friendships
  requestedFriendships Friendship[] @relation("FriendshipRequester")
  receivedFriendships  Friendship[] @relation("FriendshipAddressee")

  // Matches (as player1 / player2 / current turn / winner)
  matchesAsPlayer1     Match[] @relation("Player1Matches")
  matchesAsPlayer2     Match[] @relation("Player2Matches")
  matchesAsCurrentTurn Match[] @relation("CurrentTurnMatches")
  matchesWon           Match[] @relation("WonMatches")

  // Boards + moves
  boards        Board[]
  moves         Move[]    @relation("UserMoves")
  name          String
  emailVerified Boolean   @default(false)
  image         String?
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@map("user")
}

model Friendship {
  id          String           @id @default(uuid()) @db.Uuid
  requester   User             @relation("FriendshipRequester", fields: [requesterId], references: [id])
  requesterId String           @db.Uuid
  addressee   User             @relation("FriendshipAddressee", fields: [addresseeId], references: [id])
  addresseeId String           @db.Uuid
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())

  @@unique([requesterId, addresseeId])
  @@index([addresseeId, status])
  @@index([requesterId, status])
}

model Match {
  id String @id @default(uuid()) @db.Uuid

  // players
  player1   User   @relation("Player1Matches", fields: [player1Id], references: [id])
  player1Id String @db.Uuid

  player2   User   @relation("Player2Matches", fields: [player2Id], references: [id])
  player2Id String @db.Uuid

  // status + winner/turn
  status MatchStatus @default(INVITED)

  currentTurnUser   User?   @relation("CurrentTurnMatches", fields: [currentTurnUserId], references: [id])
  currentTurnUserId String? @db.Uuid

  winnerUser   User?   @relation("WonMatches", fields: [winnerUserId], references: [id])
  winnerUserId String? @db.Uuid

  createdAt DateTime  @default(now())
  startedAt DateTime?
  endedAt   DateTime?

  // relations
  boards Board[]
  moves  Move[]

  @@index([player1Id])
  @@index([player2Id])
  @@index([status])
}

model Board {
  id      String @id @default(uuid()) @db.Uuid
  match   Match  @relation(fields: [matchId], references: [id])
  matchId String @db.Uuid

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.Uuid

  // 5x5 board flattened into 1D
  // must contain numbers 1–25 (validated in your service code)
  numbers Int[]

  createdAt DateTime @default(now())

  @@unique([matchId, userId])
  @@index([userId])
}

model Move {
  id      String @id @default(uuid()) @db.Uuid
  match   Match  @relation(fields: [matchId], references: [id])
  matchId String @db.Uuid

  moveNumber Int

  chosenBy       User   @relation("UserMoves", fields: [chosenByUserId], references: [id])
  chosenByUserId String @db.Uuid

  number    Int // 1–25
  createdAt DateTime @default(now())

  @@unique([matchId, moveNumber])
  @@unique([matchId, number])
  @@index([matchId])
  @@index([chosenByUserId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String    @db.Uuid
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
